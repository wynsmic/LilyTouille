{
  "name": "labonneboubouffe",
  "version": "1.0.0",
  "description": "A monorepo project with client and server packages",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "npm --prefix client run dev",
    "dev:server": "npm --prefix server run dev",
    "build:client": "npm --prefix client run build",
    "build:server": "npm --prefix server run build",
    "lint:client": "npm --prefix client run lint",
    "lint:server": "npm --prefix server run lint",
    "lint": "npm run lint:client && npm run lint:server",
    "format:client": "npm --prefix client run format",
    "format:server": "npm --prefix server run format",
    "format": "npm run format:client && npm run format:server",
    "migrate:json": "npm --prefix server run migrate:json",
    "migrate:chunks": "npm --prefix server run migrate:chunks",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx,js,jsx}": [
      "npm --prefix client run lint",
      "npm --prefix client run format"
    ],
    "server/**/*.{ts,js}": [
      "npm --prefix server run lint",
      "npm --prefix server run format"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}
